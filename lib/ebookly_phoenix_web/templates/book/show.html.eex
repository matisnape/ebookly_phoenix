<h2>Show Book</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @book.title %>
  </li>

  <li>
    <strong>Author:</strong>
    <%= @author.last_name %>, <%= @author.first_name %>
  </li>

  <li>
    <strong>Bookshop:</strong>
    <%= @bookshop.name %>
  </li>

</ul>

<span><%= link "Edit", to: book_path(@conn, :edit, @book) %></span>
<span><%= link "Back", to: book_path(@conn, :index) %></span>
